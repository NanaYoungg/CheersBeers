<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeerList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="customNameText">
    <item name="android:fontFamily">@font/lotte_bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/Grey</item>
    <item name="android:textSize">17dp</item>
    </style>

    <style name="customTaglineText">
        <item name="android:fontFamily">@font/lotte_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Grey</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="customTitleText">
        <item name="android:fontFamily">@font/lotte_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Grey</item>
        <item name="android:textSize">40dp</item>
    </style>



</resources>